! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #000000
URxvt*foreground: #ffffff
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

# select font
URxvt*font: xft:Monospace:pixelsize=14

! don't use a bold font
URxvt*boldFont: xft:Monospace:pixelsize=14

! fix font width
URxvt*letterSpace: -1

! perl extensions
URxvt.perl-ext-common : default,matcher,tabbed

! open links in Firefox
URxvt.urlLauncher     : firefox
URxvt.matcher.button  : 1

! Yankable URLs (no mouse)
URxvt.perl-ext: default,keyboard-select
URxvt.keysym.M-u: perl:matcher:select
!URxvt.url-select.launcher: /usr/bin/xdg-open
!URxvt.url-select.underline: true


! keyboard select text
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! colors of tabs
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 0


! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
